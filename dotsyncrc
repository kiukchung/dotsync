# Location of your dotfiles in $HOME
DOTFILES=.dotfiles

# dotfiles to symlink
#
# srcfile:dstfile
# dstfile will be '.$srcfile' by default (with path removed)
#
[files]
dotsyncrc
bin:bin
git/gitconfig
git/gitignore
emacs/emacs
emacs/emacsd:.emacs.d
tmux/tmux.conf
tmux/tmux
vnc/vnc
zsh/custom-zsh-config:custom-zsh-config
zsh/zshrc
aws/aws
Xmodmap
proxychains
pycharm
fonts
hg/hgrc:.hgrc
[endfiles]

# Hosts to sync
## hostname                     type=masterhost, ANY or NONE    files=dotfile:tolink,another:tolink
[hosts]
localhost git=NONE
cloudtop rsync=localhost
[endhosts]

